<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kittyweather.Pages.SettingsPage">
    
    <ContentPage.Resources>
        <Style x:Key="settingsPageText" TargetType="Label">
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="VerticalTextAlignment" Value="Center"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>    
    </ContentPage.Resources>
    
    <ScrollView>
        <Grid RowDefinitions="70, Auto">
            <Grid Grid.Row="0">
                <BoxView Grid.Row="0" Color="{DynamicResource Primary}" VerticalOptions="Start"/>
                <Label Text="Settings" Style="{StaticResource settingsPageText}"/>
            </Grid>
            
            <Entry Grid.Row="1"
                   Margin="20, 10"
                   Placeholder="API Key"
                   HorizontalTextAlignment="Center"
                   IsPassword="True"
                   Completed="OnEntryCompleted"
                />
        </Grid>
    </ScrollView>
</ContentPage>