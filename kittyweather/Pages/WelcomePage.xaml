<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="kittyweather.Pages.WelcomePage">
    <ContentPage.Content>
        <Grid VerticalOptions="Center" HorizontalOptions="Center"  RowDefinitions="*, *, *">
            <Label Grid.Row="0" Text="Welcome to Kitty Weather!" />
            <Label Grid.Row="1" Text="Please enter your API key:" />
            
            <Entry Grid.Row="2" Completed="SetApiKey_OnClicked"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>