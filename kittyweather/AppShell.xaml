<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="kittyweather.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:kittyweather"
    xmlns:pages="clr-namespace:kittyweather.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Settings" Icon="settings.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}"/>
        </Tab>
        <Tab Title="Weather" Icon="cloud.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:WeatherPage}"/>
        </Tab>
        <Tab Title="About" Icon="help.svg">
            <ShellContent ContentTemplate="{DataTemplate pages:AboutPage}"/>
        </Tab>
        <Tab Title="testpage">
            <ShellContent ContentTemplate="{DataTemplate pages:WelcomePage}"></ShellContent>
        </Tab>
    </TabBar>

</Shell>
